<div class="card-container">
  <div class="classForm card">
    <form
      action="/alumn/{{editAlumn._id}}/edit"
      method="post"
      enctype="multipart/form-data"
    >
      <div>
        <label for="image" class="form-label"><b>Profile photo:</b></label>
        <input type="file" name="image" class="form-control" />

      </div>

      <br />

      <div>
        <div>
          <label for="firstName" class="form-label"><b>Name:</b></label>
          <input
            type="text"
            name="firstName"
            value="{{editAlumn.firstName}}"
            class="form-control"
          />
        </div>
        <br />
        <div>
          <label for="lastName" class="form-label"><b>Last name:</b></label>
          <input
            type="text"
            name="lastName"
            value="{{editAlumn.lastName}}"
            class="form-control"
          />
        </div>
        <br />
        <div>
          <label for="name" class="form-label"><b>Grade:</b></label>
          <input
            type="text"
            name="name"
            value="{{alumnClass.name}}"
            class="form-control"
          />
        </div>
        <br />
        <div>
          <label for="subName" class="form-label"><b>Number:</b></label>
          <input
            type="text"
            name="subName"
            value="{{alumnClass.subName}}"
            class="form-control"
          />
        </div>
        <br />
        <div>
          <label for="contactPerson" class="form-label"><b>Contact person:</b></label>
          <input
            type="test"
            name="contactPerson"
            value="{{editAlumn.contactPerson}}"
            class="form-control"
          />
        </div>
        <br />
        <div>
          <label for="contactEmail" class="form-label"><b>Contact email:</b></label>
          <input
            type="text"
            name="contactEmail"
            value="{{editAlumn.contactEmail}}"
            class="form-control"
          />
        </div>
        <br />
        <div>
          <label for="contactPhone" class="form-label"><b>Contact phone:</b></label>
          <input
            type="text"
            name="contactPhone"
            value="{{editAlumn.contactPhone}}"
            class="form-control"
          />
        </div>
        <br />

        <button
          class="btn btn-secondary buton"
          style="background-color: #010158"
        >Commit</button>
      </div>
    </form>
    <form action="/alumn/{{editAlumn._id}}/delete" method="post">
      <button
        class="btn btn-secondary buton"
        style="background-color: #010158"
      >Delete</button>
    </form>
  </div>

</div>
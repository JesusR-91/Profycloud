<div class = "loginSignup">
<div   class="d-flex flex-column align-items-center text-center"
  style="width: 600px">
  
   <img src="images/english-version.png" alt="cover" class="card-img-top" />
  <br>
  <div class="d-flex p-2 flex-column mb-3 justify-content-center align-items-center">
    <form action="/signup" method="post" class="row g-3">
      <div class="col-md-6">
        <label for="firstName" class="form-label">Name</label>
        <input type="text" name="firstName" class="form-control"/>  
      </div>
      <div class="col-md-6">
        <label for="lastName" class="form-label">First name</label>
        <input type="text" name="lastName" class="form-control"/>
      </div>
      <div class="col-md-6">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" class="form-control"/>
      </div>
      <div class="col-md-6">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" class="form-control"/>
      </div>
       <button
        class="btn btn-primary btn-lg"
        style="background-color: #010158"
      >Sign Up</button>
      {{#if this.errorMessage}}
        <p style="color: red;">{{errorMessage}}</p>
      {{/if}}
           <br />
      <p>Si ya estas registrado,
        <a href="/login" style="color: #010158">haz click aqu√≠.</a></p>
    </form>
  </div>
</div>
</div>





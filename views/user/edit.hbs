<div class = "card-container">

    <div class = "classForm card">
    <h2>Edit your profile: </h2>

        <form action="/user/edit" method="post" enctype='multipart/form-data'>
            <div>
                <label for="image" class="form-label"><b>Profile photo:</b></label>
                <input type="file" name="image" class="form-control">

            </div>

            <br>

            <div>
                <div>
                    <label for="firstName" class="form-label"><b>Name:</b></label>
                    <input type="text" name="firstName" value="{{this.firstName}}" class="form-control">
                </div>
                <br>

                <div>
                    <label for="lastName" class="form-label"><b>Last name:</b></label>
                    <input type="text" name="lastName" value="{{this.lastName}}" class="form-control">
                </div>
                <br>
                <div>
                    <label for="email" class="form-label"><b>Email:</b></label>
                    <input type="email" name="email" value="{{this.email}}" class="form-control">
                </div>
                <br>
                </div>
                <br>

                <div>
                    <button class="btn btn-secondary">Commit</button>
                </div>
            </div>
        </form>

</div>